{
  "name": "@api/cesieats",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "exports": {
    ".": "./export.ts"
  },
  "packageManager": "pnpm@9.1.2",
  "scripts": {
    "build": "pnpm run build:gateway && pnpm run build:auth && pnpm run build:orders && pnpm run build:restaurants",
    "build:gateway": "nest build api-gateway",
    "build:auth": "nest build auth-service",
    "build:orders": "nest build orders-service",
    "build:restaurants": "nest build restaurants-service",
    "build:deliveries": "nest build deliveries-service",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "generate:orders": "pnpm exec prisma generate --schema ./libs/databases/src/orders/schema.prisma",
    "generate:restaurants": "pnpm exec prisma generate --schema ./libs/databases/src/restaurants/schema.prisma",
    "generate:deliveries": "pnpm exec prisma generate --schema ./libs/databases/src/deliveries/schema.prisma",
    "generate:users": "pnpm exec prisma generate --schema ./libs/databases/src/users/schema.prisma",
    "generate": "pnpm run generate:orders && pnpm run generate:users && pnpm run generate:restaurants && pnpm run generate:deliveries",
    "push:orders": "pnpm exec prisma db push --schema ./libs/databases/src/orders/schema.prisma --accept-data-loss --skip-generate --force-reset",
    "push:restaurants": "pnpm exec prisma db push --schema ./libs/databases/src/restaurants/schema.prisma --accept-data-loss --skip-generate --force-reset",
    "push:deliveries": "pnpm exec prisma db push --schema ./libs/databases/src/deliveries/schema.prisma --accept-data-loss --skip-generate --force-reset",
    "push:users": "pnpm exec prisma db push --schema ./libs/databases/src/users/schema.prisma --accept-data-loss --skip-generate --force-reset",
    "push": "pnpm run push:orders && pnpm run push:users && pnpm run push:restaurants && pnpm run push:deliveries",
    "seed:orders": "ts-node ./libs/databases/src/orders/seed.ts",
    "seed:restaurants": "ts-node ./libs/databases/src/restaurants/seed.ts",
    "seed:deliveries": "ts-node ./libs/databases/src/deliveries/seed.ts",
    "seed:users": "ts-node ./libs/databases/src/users/seed.ts",
    "seed": "pnpm run seed:users && pnpm run seed:restaurants && pnpm run seed:orders && pnpm run seed:deliveries",
    "start": "nest start",
    "start:dev": "nest start --tsc --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/apps/api-gateway/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/api-gateway/test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "3.2.2",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/microservices": "^10.3.8",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^7.3.1",
    "@prisma/client": "^5.14.0",
    "@types/multer": "^1.4.11",
    "amqp-connection-manager": "^4.1.14",
    "amqplib": "^0.10.4",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cookie-parser": "^1.4.6",
    "cpx": "^1.5.0",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "joi": "^17.13.1",
    "multer": "1.4.5-lts.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "prisma": "^5.14.0",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/cookie-parser": "^1.4.7",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "@types/supertest": "^6.0.0",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@app/common(|/.*)$": "<rootDir>/libs/common/src/$1",
      "^@app/databases(|/.*)$": "<rootDir>/libs/databases/src/$1"
    }
  }
}
