generator client {
  provider      = "prisma-client-js"
  output        = "../../../../node_modules/@gen/client/restaurants"
  binaryTargets = ["native"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL_RESTAURANTS")
}

model restaurant {
  id                String   @id @default(auto()) @map("_id") @db.ObjectId
  name              String?
  owner             String
  priceRange        String?
  phone             String?  @unique
  address           String?  @unique
  siret             String?  @unique
  category          String?
  restaurantPicture String?
  items             item[]
  menus             menu[]
  orders            String[]
}

model item {
  id           String     @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  description  String?
  price        Float?
  itemPicture  String?
  restaurant   restaurant @relation(fields: [restaurantId], references: [id])
  restaurantId String     @db.ObjectId
  menus        menu[]     @relation(fields: [menuIDs], references: [id])
  menuIDs      String[]   @db.ObjectId
}

model menu {
  id           String      @id @default(auto()) @map("_id") @db.ObjectId
  name         String?
  description  String?
  price        Float?
  menuPicture  String?
  restaurant   restaurant? @relation(fields: [restaurantId], references: [id])
  restaurantId String      @db.ObjectId
  items        item[]      @relation(fields: [itemIDs], references: [id])
  itemIDs      String[]    @db.ObjectId
}
